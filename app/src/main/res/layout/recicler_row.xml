<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">



        <LinearLayout
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_height="match_parent">


            <LinearLayout android:layout_width="0dp"
                          android:layout_weight="1"
                          android:id="@+id/linear_jogador1"
                          android:layout_height="match_parent">

                <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                             android:layout_height="match_parent">

                    <TextView
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/texto_score"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/nome_jogador"
                            android:paddingStart="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Personagem"
                            android:textSize="15sp" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:id="@+id/texto_score"
                              app:layout_constraintTop_toBottomOf="@id/nome_jogador"
                              app:layout_constraintStart_toStartOf="parent"
                              android:paddingStart="5dp"
                              app:layout_constraintBottom_toBottomOf="parent"
                              android:text="score"
                    />

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:paddingEnd="5dp"
                              android:id="@+id/resultado"
                              app:layout_constraintTop_toTopOf="parent"
                              app:layout_constraintBottom_toBottomOf="parent"
                              app:layout_constraintEnd_toEndOf="parent"
                              android:textSize="25sp"
                              android:text="Winner"
                    />


                </android.support.constraint.ConstraintLayout>



            </LinearLayout>

            <LinearLayout android:layout_width="0dp"
                          android:id="@+id/linear_jogador2"
                          android:layout_weight="1"
                          android:layout_height="match_parent">

                <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                             android:layout_height="match_parent">

                    <TextView
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/texto_score2"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:id="@+id/nome_jogador2"
                            android:paddingEnd="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Personagem"
                            android:textSize="15sp" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:id="@+id/texto_score2"
                              app:layout_constraintTop_toBottomOf="@id/nome_jogador2"
                              app:layout_constraintEnd_toEndOf="parent"
                              android:paddingEnd="5dp"
                              app:layout_constraintBottom_toBottomOf="parent"
                    android:text="score"
                    />

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:paddingStart="5dp"
                              android:id="@+id/resultado2"
                              app:layout_constraintTop_toTopOf="parent"
                              app:layout_constraintBottom_toBottomOf="parent"
                              app:layout_constraintStart_toStartOf="parent"
                              android:textSize="25sp"
                              android:text="Winner"
                    />


                </android.support.constraint.ConstraintLayout>



            </LinearLayout>





        </LinearLayout>



</LinearLayout>