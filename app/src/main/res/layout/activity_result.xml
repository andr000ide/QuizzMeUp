<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/result_main"
        android:layout_height="match_parent"
        tools:context=".ResultActivity">


    <TextView android:id="@+id/score1"
            app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintVertical_bias="0.4"
              android:gravity="center"
              android:textSize="40sp"
            android:layout_width="match_parent" android:layout_height="wrap_content"
    android:text="Score Final"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@id/score1"
    android:id="@+id/label_infocertas" android:text="Number of correct questions" android:textSize="25sp" android:paddingTop="20dp"
              android:gravity="center"
    />

    <TextView
            android:textSize="40sp" android:gravity="center" android:id="@+id/colocarScore" app:layout_constraintTop_toBottomOf="@id/label_infocertas" android:layout_width="match_parent" android:layout_height="wrap_content"
    android:text="0"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Main Menu" android:textSize="25sp" android:textAllCaps="false"
            android:id="@+id/voltar"
     app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>